<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    android:padding="24dp"
    tools:context=".EditDetailBookActivity">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Data Buku"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul Buku"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_book_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Judul Buku"
        android:textColor="@color/black"
        android:maxLength="50"
        android:maxLines="1"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Penulis"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_author_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama Penulis"
        android:textColor="@color/black"
        android:maxLines="1"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_publication_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tahun Terbit"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_publication_year"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Tahun Terbit"
        android:textColor="@color/black"
        android:maxLength="50"
        android:maxLines="1"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Kategori Buku"
        android:textColor="@color/black"
        android:maxLength="50"
        android:maxLines="1"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_book_cover_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL Cover Buku"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_book_cover_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan URL Cover Buku"
        android:textColor="@color/black"
        android:maxLines="1"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btn_edit_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_500"
        android:text="Ubah Data"
        android:textColor="@color/white"/>

</androidx.appcompat.widget.LinearLayoutCompat>